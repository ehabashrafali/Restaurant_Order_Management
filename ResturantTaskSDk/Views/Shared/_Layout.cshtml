@{ 
    bool isAuthenticated = User.Identity.IsAuthenticated;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with FoodHut landing page.">
    <meta name="author" content="Devcrud">

    <!-- font icons -->
    <link rel="stylesheet" href="~/assets/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/animate/animate.css">

    <link href="~/assets/css/Loader.css" rel="stylesheet" />
    <!-- Pagination -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.css" rel="stylesheet">


    <!-- Bootstrap + FoodHut main styles -->
    <link rel="stylesheet" href="~/assets/css/foodhut.css">

</head>

<body data-spy="scroll" data-target=".navbar" data-offset="30" id="home">
    <!-- Navbar -->
    <nav class="custom-navbar navbar navbar-expand navbar-dark fixed-top" data-spy="affix" data-offset-top="10">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home">Home</a>
                </li>
                <li class="nav-item">
                    <span class="nav-link" onclick="location.replace('/Home#About')">About</span>
                </li>
                <li class="nav-item">
                    <span class="nav-link" onclick="location.replace('/Home#Reviews')">Reviews</span>
                </li>
                <li class="nav-item">
                    <span class="nav-link" onclick="location.replace('/Home#Contact Us')">Contact Us</span>
                </li>
            </ul>
            <a class="navbar-brand m-auto" href="/Home">
                <img src="~/assets/imgs/chef-restaurant-logo-publicdomainvectors.svg" class="brand-img" alt="">
                <span class="brand-txt">Resturant</span>
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Food">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Order">Orders</a>
                </li>
                <li>
                    <div class="kebab nav-item">
                        <figure></figure>
                        <figure class="middle"></figure>
                        <figure></figure>
                        <ul class="dropdown">
                            @if (isAuthenticated)
                            {
                                <li><a href="/User/Logout">Logout</a></li>
                                <li><a href="/Order/Create">Add Order</a></li>
                                <li><a href="/Food/create">Add Food</a></li>
                            }
                            else
                            {
                                <li><a href="/User/Login">Login</a></li>
                                <li> <a href="/Order/Create"> Add Order</a></li>
                                <li> <a href="/Food/create"> Add Food</a></li>

                            }
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="preloader">
        <div class="loader"></div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- page footer  -->
    <div class="container-fluid bg-dark text-light has-height-md middle-items border-top text-center wow fadeIn">
        <div class="row">
            <div class="col-sm-4">
                <h3>EMAIL US</h3>
                <P class="text-muted">ehabashrafali88@gmail.com</P>
            </div>
            <div class="col-sm-4">
                <h3>CALL US</h3>
                <P class="text-muted">(002)01008248905</P>
            </div>
            <div class="col-sm-4">
                <h3>FIND US</h3>
                <P class="text-muted">12345 El-Ferdous ST Cairo, Egypt</P>
            </div>
        </div>
    </div>

    <!--PreLoader  -->
    <script>
        window.addEventListener("load", function () {
            const preloader = document.querySelector(".preloader");
            preloader.classList.add("hidden");
        });
        function showPreloader() {
            document.querySelector(".preloader").classList.remove("hidden");
        }
        function hidePreloader() {
            document.querySelector(".preloader").classList.add("hidden");
        }
    </script>


    <!-- Prohibition -->
    <script>
        // Get all elements with the class 'prohibitionArea'
        const prohibitionElements = document.querySelectorAll('.prohibitionArea');

        // Loop through all elements and attach event listeners
        prohibitionElements.forEach(prohibitionElement => {
            prohibitionElement.addEventListener('mouseenter', () => {
                prohibitionElement.style.cursor = 'not-allowed';
            });

            prohibitionElement.addEventListener('mouseleave', () => {
                prohibitionElement.style.cursor = 'default';
            });
        });
    </script>

    <!-- Validation -->

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>

    <!-- Bootstrap and DataTables scripts -->
    <!--Pagination -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.js"></script>

    <!-- DataTable initialization -->
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>

    <!-- custom scripts -->
    <script src="~/assets/vendors/wow/wow.js"></script>
    <script src="~/assets/js/foodhut.js"></script>
    <script src="~/assets/vendors/bootstrap/bootstrap.affix.js"></script>
    <script src="~/assets/vendors/bootstrap/bootstrap.bundle.js"></script>

    <!-- FoodHut js -->
    <script src="~/assets/js/foodhut.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    <script>
        var kebab = document.querySelector('.kebab'),
            dropdown = document.querySelector('.dropdown');

        kebab.addEventListener('click', function () {
            dropdown.classList.toggle('active');
        })
    </script>

</body>
</html>
