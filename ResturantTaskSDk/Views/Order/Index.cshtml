@model IEnumerable<CrmEarlyBound.task01_order_002>

<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Total Cost Before Discount
            </th>
            <th>
                Discount (%)
            </th>
            <th>
                Total Cost After Discount
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Order Status
            </th>
            <th>
                Details
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
       
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.task01_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.task01_totalcostbeforediscount.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.task01_discount_002)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.task01_totalcostafter.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdon, "{0:d}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.task01_orderstatus_002)
                </td>
                <td>
                    <a href="@Url.Action("List","Meal", new { id = item.Id })" title="Details">
                        <img src="@Url.Content("~/assets/imgs/details.png")" alt="Details" style="width: 20px; height: 20px; align-items:center" />
                    </a>
                </td>
                @if (item.task01_orderstatus_002 == CrmEarlyBound.task01_order_002_task01_orderstatus_002.Checkout)
                {
                <td >
                    <span class="prohibitionArea" title="Edit" style="opacity: 0.5; " >
                        <img src="@Url.Content("~/assets/imgs/edit.png")" alt="Edit" style="width: 20px; height: 20px; align-items:center" />
                    </span>
                </td>
                }
                else
                {
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" title="Edit">
                        <img src="@Url.Content("~/assets/imgs/edit.png")" alt="Edit" style="width: 20px; height: 20px; align-items:center" />
                    </a>
                </td>
                }
                <td>
                    <a href="@Url.Action("Delete", new { id = item.Id })" title="Delete">
                        <img src="@Url.Content("~/assets/imgs/delete.png")" alt="Delete" style="width: 20px; height: 20px; align-items: center" />
                    </a>
                </td>
            </tr>
        }
    </tbody>


</table>
